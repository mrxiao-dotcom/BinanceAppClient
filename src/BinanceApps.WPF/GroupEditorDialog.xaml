<Window x:Class="BinanceApps.WPF.GroupEditorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="创建分组" Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="TextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="8"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <Style x:Key="ButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- 分组名称 -->
            <RowDefinition Height="Auto"/>  <!-- 分组说明 -->
            <RowDefinition Height="*"/>     <!-- 占位 -->
            <RowDefinition Height="Auto"/>  <!-- 按钮 -->
        </Grid.RowDefinitions>
        
        <!-- 分组名称 -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="分组名称:" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtGroupName" Height="35" Style="{StaticResource TextBoxStyle}"
                     MaxLength="20" ToolTip="建议不超过10个字符"/>
        </StackPanel>
        
        <!-- 分组说明 -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <TextBlock Text="分组说明（可选）:" Style="{StaticResource LabelStyle}"/>
            <TextBox x:Name="txtDescription" Height="60" 
                     TextWrapping="Wrap" AcceptsReturn="True" 
                     VerticalScrollBarVisibility="Auto"
                     Style="{StaticResource TextBoxStyle}"/>
        </StackPanel>
        
        <!-- 按钮区 -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCancel" Content="取消" Width="80" 
                    Style="{StaticResource ButtonStyle}"
                    IsCancel="True" Click="BtnCancel_Click"/>
            <Button x:Name="btnSave" Content="保存" Width="80" Margin="10,0,0,0"
                    Style="{StaticResource ButtonStyle}"
                    Background="#0078D4" Foreground="White"
                    IsDefault="True" Click="BtnSave_Click"/>
        </StackPanel>
    </Grid>
</Window> 