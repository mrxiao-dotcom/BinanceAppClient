<Window x:Class="BinanceApps.WPF.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="日志窗口 - 币安API操作记录" 
        Height="600" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">
    
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- 标题和操作按钮 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="币安API操作日志" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
            <Button x:Name="btnClearLog" Content="清空日志" Margin="20,0,0,0" Padding="10,5" Click="BtnClearLog_Click"/>
            <Button x:Name="btnCopyLog" Content="复制日志" Margin="10,0,0,0" Padding="10,5" Click="BtnCopyLog_Click"/>
            <Button x:Name="btnSaveLog" Content="保存日志" Margin="10,0,0,0" Padding="10,5" Click="BtnSaveLog_Click"/>
        </StackPanel>
        
        <!-- 日志内容 -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <TextBox x:Name="txtLogContent" 
                     IsReadOnly="True" 
                     FontFamily="Consolas" 
                     FontSize="10"
                     Background="#F5F5F5"
                     BorderBrush="#CCCCCC"
                     TextWrapping="Wrap"
                     VerticalAlignment="Stretch"
                     HorizontalAlignment="Stretch"/>
        </ScrollViewer>
        
        <!-- 状态栏 -->
        <StatusBar Grid.Row="2" Margin="0,10,0,0">
            <StatusBarItem>
                <TextBlock x:Name="txtStatus" Text="就绪"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="txtLogCount" Text="日志条数: 0"/>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock x:Name="txtLastUpdate" Text="最后更新: -"/>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window> 